<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/desc"
        android:src="@drawable/login_view_bg" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/settings_view_btn_home" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/settings_view_btn_back" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button1"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/desc"
        android:src="@drawable/login_view_cc_titleline" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button2"
        android:layout_marginRight="84dp"
        android:layout_toLeftOf="@+id/button2"
        android:contentDescription="@string/desc"
        android:src="@drawable/settings_view_title" />

    <Button
        android:id="@+id/settings-Descargar-Cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Button03"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/settings_view_btn_descarga"
        android:visibility="gone" />

    <Button
        android:id="@+id/settings-Salir-Twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/imageView3"
        android:background="@drawable/settings_view_btn_salirtt"
        android:visibility="gone" />

    <Button
        android:id="@+id/settings-Terminos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/settings_view_btn_terms"
        android:visibility="gone" />

    <Button
        android:id="@+id/settings-Salir-Cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:background="@drawable/settings_view_btn_salirapp" />

    <Button
        android:id="@+id/settings-Salir-Facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/settings-Salir-Cuenta"
        android:layout_below="@+id/settings-Salir-Cuenta"
        android:background="@drawable/settings_view_btn_salirfb" />

</RelativeLayout>