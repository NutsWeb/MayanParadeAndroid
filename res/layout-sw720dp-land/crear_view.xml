<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_view_bg"
    android:gravity="left" >

    <LinearLayout
        android:id="@+id/crea_view_input_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/crear_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_view_cc_name" />

            <EditText
                android:id="@+id/crear_view_txt_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/app_textfield"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/crear_view_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_view_cc_lastname" />

            <EditText
                android:id="@+id/crear_view_txt_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/app_textfield"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/crear_view_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_view_cc_correo"
                android:src="@drawable/login_view_cc_correo" />

            <EditText
                android:id="@+id/crear_view_txt_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/app_textfield"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/crear_view_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_view_cc_pass" />

            <EditText
                android:id="@+id/crear_view_txt_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/app_textfield"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/crear_view_pass2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_view_cc_pass2" />

            <EditText
                android:id="@+id/crear_view_txt_pass2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/app_textfield"
                android:inputType="textPassword" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/crea_view_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/linearLayout2"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/crear_view_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/login_view_logo_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/crea_view_terms_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crea_view_input_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" >

        <CheckBox
            android:id="@+id/crear_view_cb_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/crear_view_lb_aceptterms"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/login_view_cc_lb_aceptarterminos" />

        <ImageView
            android:id="@+id/crear_view_lb_terms"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@drawable/login_view_cc_lb_verterminos" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/crea_view_title_layout"
        android:src="@drawable/login_view_cc_titleline" />

    <LinearLayout
        android:id="@+id/crea_view_btns_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crea_view_terms_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="18dp" >

        <Button
            android:id="@+id/crear_view_btn_acept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/app_btn_aceptar" />

        <Button
            android:id="@+id/crear_view_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/app_btn_cancel" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/crea_view_status_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crear_register_process" />

    </LinearLayout>

    <ImageView
        android:id="@+id/crear_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/crea_view_title_layout"
        android:layout_alignRight="@+id/crea_view_input_layout"
        android:src="@drawable/login_view_cc_lb_title" />

</RelativeLayout>