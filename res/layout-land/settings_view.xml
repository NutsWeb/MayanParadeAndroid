<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/desc"
        android:src="@drawable/login_view_bg" />

    <Button
        android:id="@+id/settings_view_cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/settings_view_btn_descarga"
        android:visibility="gone" />

    <Button
        android:id="@+id/settings_view_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/imageView3"
        android:background="@drawable/settings_view_btn_salirtt"
        android:visibility="gone" />

    <Button
        android:id="@+id/settings_view_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/settings_view_btn_terms"
        android:visibility="gone" />

    <Button
        android:id="@+id/setttings_view_cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:background="@drawable/settings_view_btn_salirapp" />

    <Button
        android:id="@+id/settings_view_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/setttings_view_cuenta"
        android:layout_below="@+id/setttings_view_cuenta"
        android:background="@drawable/settings_view_btn_salirfb" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_alignRight="@+id/setttings_view_cuenta"
        android:contentDescription="@string/desc"
        android:src="@drawable/settings_view_title" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/settings_view_home"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/desc"
        android:src="@drawable/login_view_cc_titleline" />

    <Button
        android:id="@+id/settings_view_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/settings_view_btn_home" />

</RelativeLayout>